{
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSameLine": true,
  "plugins": [
    "prettier-plugin-astro",
    "prettier-plugin-svelte",
    "@ianvs/prettier-plugin-sort-imports"
  ],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro",
        "tabWidth": 2,
        "singleQuote": true,
        "semi": false
      }
    },
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte",
        "svelteIndentScriptAndStyle": false,
        "tabWidth": 2,
        "singleQuote": true,
        "semi": false,
        "bracketSameLine": true
      }
    },
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript",
        "tabWidth": 2,
        "singleQuote": true,
        "semi": false
      }
    }
  ]
}
